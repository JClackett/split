{
  "name": "root",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build:api": "lerna run build --scope={@split/connector,@split/api}",
    "build:web": "lerna run build --scope={@split/connector,@split/web}",
    "pre-commit": "lerna run pre-commit",
    "test": "lerna run test",
    "lint": "eslint --fix --cache --ext .js,.jsx,.ts,.tsx packages",
    "heroku-postbuild": "yarn build:api"
  },
  "lint-staged": {
    "*.{js,jsx,json,ts,tsx,html}": [
      "prettier --write",
      "eslint --fix --cache --ext .jsx,.js,.ts,.tsx packages",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pre-commit"
    }
  },
  "resolutions": {
    "graphql": "14.1.1"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lerna": "^3.13.0",
    "lint-staged": "^8.1.5"
  }
}
