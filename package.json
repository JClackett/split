{
  "name": "root",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build:api": "cd packages/api && yarn build",
    "build:connector": "cd packages/connector && yarn build",
    "build:web": "lerna run build --scope={@split/connector,@split/web}",
    "test": "lerna run test",
    "typecheck": "lerna run typecheck",
    "lint": "lerna run lint",
    "pre-commit": "lerna run pre-commit",
    "ci": "yarn build:connector && yarn typecheck && yarn lint && yarn test",
    "heroku-postbuild": "yarn build:api"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run --concurrency 1 --stream pre-commit"
    }
  },
  "devDependencies": {
    "husky": "3.0.3",
    "lerna": "3.16.4",
    "lint-staged": "9.2.1"
  }
}
