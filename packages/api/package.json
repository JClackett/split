{
  "private": true,
  "name": "@split/api",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "start": "ts-node src/index.ts",
    "watch-dev": "tsnd --respawn --no-notify src/index.ts",
    "watch": "nodemon",
    "work": "ts-node src/workers.ts",
    "db:create": "ts-node node_modules/typeorm/cli.js migration:create -c ${NODE_ENV} -n",
    "db:generate": "ts-node node_modules/typeorm/cli.js migration:generate -c ${NODE_ENV} -n",
    "db:rollback": "ts-node node_modules/typeorm/cli.js migration:revert -c ${NODE_ENV}",
    "seed": "ts-node src/seed.ts",
    "build": "rimraf dist && tsc --build",
    "lint": "tslint -p .",
    "prettify": "prettier --write './src/**/*.ts'",
    "pre-commit": "yarn lint && yarn prettify"
  },
  "dependencies": {
    "@sendgrid/mail": "^6.3.1",
    "apollo-server-express": "^2.4.8",
    "aws-sdk": "^2.426.0",
    "bcryptjs": "^2.4.3",
    "bull": "^3.7.0",
    "connect-redis": "^3.4.1",
    "dataloader": "^1.4.0",
    "dayjs": "^1.8.11",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "express-jwt": "^5.3.1",
    "ioredis": "^4.6.2",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "nodemailer": "^5.1.1",
    "pg": "^7.9.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^0.17.0",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.15"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/bull": "^3.5.9",
    "@types/connect-redis": "^0.0.9",
    "@types/express": "^4.16.1",
    "@types/express-jwt": "^0.0.42",
    "@types/faker": "^4.1.5",
    "@types/ioredis": "^4.0.10",
    "@types/jest": "^24.0.11",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/morgan": "^1.7.35",
    "@types/node": "^11.11.5",
    "@types/nodemailer": "^4.6.6",
    "faker": "^4.1.0",
    "jest": "^24.5.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.3",
    "ts-node-dev": "^1.0.0-pre.32",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.3.4000"
  },
  "workspaces": {
    "nohoist": [
      "typeorm",
      "typeorm/**"
    ]
  }
}
