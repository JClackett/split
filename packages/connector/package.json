{
  "name": "@split/connector",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "watch": "tsc --build --watch",
    "generate": "graphql-codegen --watch",
    "build": "rm -rf dist && tsc",
    "lint": "tslint -p tsconfig.json",
    "prettify": "prettier --write './src/**/*.{ts,tsx}'",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,json,ts,tsx,html}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "graphql-tag": "^2.10.1",
    "react-apollo-hooks": "^0.4.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.0.3",
    "@graphql-codegen/typescript": "^1.0.3",
    "@graphql-codegen/typescript-operations": "^1.0.3",
    "@graphql-codegen/typescript-react-apollo": "^1.0.3",
    "@types/node": "^11.11.5",
    "prettier": "^1.16.4",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.3.4000"
  }
}
