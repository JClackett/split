{
  "name": "@split/connector",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "watch": "tsc --build --watch",
    "generate": "graphql-codegen",
    "build": "rm -rf dist && tsc",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --cache --ext .jsx,.js,.ts,.tsx src",
    "prettify": "prettier --write './src/**/*.{ts,tsx}'",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,json,ts,tsx,html}": [
      "prettier --write",
      "eslint --fix --cache --ext .jsx,.js,.ts,.tsx src",
      "git add"
    ]
  },
  "dependencies": {
    "graphql-tag": "^2.10.1",
    "react-apollo-hooks": "^0.4.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.0.6",
    "@graphql-codegen/typescript": "1.0.6",
    "@graphql-codegen/typescript-operations": "1.0.6",
    "@graphql-codegen/typescript-react-apollo": "1.0.6",
    "@types/node": "11.12.2",
    "@typescript-eslint/eslint-plugin": "1.5.0",
    "@typescript-eslint/parser": "1.5.0",
    "babel-eslint": "10.0.1",
    "eslint": "5.15.3",
    "eslint-config-prettier": "4.1.0",
    "eslint-plugin-flowtype": "3.4.2",
    "eslint-plugin-import": "2.16.0",
    "prettier": "1.16.4",
    "typescript": "3.4.1"
  }
}
