{
  "name": "@split/connector",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "watch": "tsc --build --watch",
    "generate": "graphql-codegen",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --cache --ext .jsx,.js,.ts,.tsx src",
    "prettify": "prettier --write './src/**/*.{ts,tsx}'",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,json,ts,tsx,html}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --cache --ext .jsx,.js,.ts,.tsx src",
      "git add"
    ]
  },
  "dependencies": {
    "graphql-tag": "^2.10.1",
    "react-apollo": "^2.5.5",
    "react-apollo-hooks": "0.4.5"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.5.0",
    "@graphql-codegen/typescript": "1.5.0",
    "@graphql-codegen/typescript-operations": "1.5.0",
    "@graphql-codegen/typescript-react-apollo": "1.5.0",
    "@types/node": "11.13.11",
    "@typescript-eslint/eslint-plugin": "1.13.0",
    "@typescript-eslint/parser": "1.13.0",
    "babel-eslint": "10.0.2",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.3.0",
    "eslint-plugin-flowtype": "3.11.1",
    "eslint-plugin-import": "2.18.2",
    "prettier": "1.18.2",
    "typescript": "3.5.3"
  }
}
